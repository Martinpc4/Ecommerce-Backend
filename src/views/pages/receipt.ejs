<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Email Verification</title>
		<!-- Bootstrap's CSS -->
		<link
				href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
				rel="stylesheet"
				integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
				crossorigin="anonymous"
		/>
		<!-- Bootstrap's Icons -->
		<link
				rel="stylesheet"
				href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.0/font/bootstrap-icons.css"
		/>
	</head>
	<body>
		<main class="container d-flex flex-column justify-content-center align-items-left">
			<div class="row">
				<div class="col-12">
					<h3>Receipt ID: <%- receiptId%></h3>
				</div>
			</div>
			<div class='row'>
				<div class='col-12'>
					<h5>Products</h5>
				</div>
			</div>
			<div class="row">
				<% products.forEach(function(product) { %>
				<div class='col'>
					<div class="card" style="width: 18rem;">
						<img src="<%- product.imagesURL[0] %>" class="card-img-top" alt="product photo">
						<div class="card-body">
							<h5 class="card-title"><%- product.name %></h5>
							<p class="card-text">[<%- product.color %>]<span> <%- product.memory %>Gb</span></p>
							<p class="card-text">Amount: <%- product.amount %></p>
							<p class="card-text">$<%- product.price %> USD</p>
						</div>
					</div>
				</div>
				<% }) %>
			</div>
			<div class="row">
				<div class="col-12">
					<h3>Total: USD<%- total%></h3>
				</div>
			</div>
		</main>
		<!-- Bootstrap's JavaScript -->
		<script
				src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
				integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
				crossorigin="anonymous"
		></script>	</body>
</html>
