<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Sign Up Form</title>
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
			crossorigin="anonymous"
		/>
	</head>
	<body>
		<style>
			#signupForm {
				max-width: 400px;
				max-height: 500px;
			}
			#fb_btn {
				background-color: #1877f2;
				width: 40px;
				height: 40px;
			}
			#fb-icon {
				color: white;
			}
		</style>
		<%- include('../partials/header'); -%>
		<main class="container d-flex flex-column justify-content-center align-items-center">
			<div class="container m-5 w-75 mw-50">
				<div class="row">
					<p class="fs-3 text-center">Server Sign up</p>
				</div>
				<div class="row">
					<div class="col-12">
						<form action="/auth/signup" method="post" enctype="multipart/form-data">
							<div class="container">
								<div class="row mb-5">
									<div class="col-12">
										<h5>Personal Information</h5>
									</div>
									<div class="col-12">
										<div class="row">
											<div class="my-3 col-6">
												<label for="name">Name</label>
												<input
													class="form-control"
													type="gname"
													name="name"
												/>
											</div>
											<div class="my-3 col-6">
												<label for="lastName">Last Name</label>
												<input
													class="form-control"
													type="lname"
													name="lastName"
												/>
											</div>
											<div class="my-3 col-6">
												<label for="email">Email</label>
												<input
													class="form-control"
													type="email"
													name="email"
												/>
											</div>
											<div class="my-3 col-6">
												<label for="password">Password</label>
												<input
													class="form-control"
													type="password"
													name="password"
												/>
											</div>
											<div class="my-3 col-6">
												<div class="row mb-2">
													<label for="phone">Phone Number</label>
												</div>
												<div class="row">
													<div class="col-4">
														<div class="input-group">
															<span class="input-group-text">+</span>
															<input
																class="form-control"
																type="text"
																name="phoneExtension"
															/>
														</div>
													</div>
													<div class="col-8">
														<input
															class="form-control"
															type="text"
															name="phoneNumber"
														/>
													</div>
												</div>
											</div>
											<div class="col-6 my-3">
												<label for="avatarPhoto" class="form-label">Photo</label>
												<input
													class="form-control"
													type="file"
													name="avatarPhoto"
												/>
											</div>
										</div>
									</div>
								</div>
								<div class="row mb-5">
									<div class="col-12">
										<h5>Address Information</h5>
									</div>
									<div class="col-12">
										<div class="row">
											<div class="my-3 col-8">
												<label for="street">Street</label>
												<input
													class="form-control"
													type="text"
													name="street"
												/>
											</div>
											<div class="my-3 col-4">
												<label for="streetNumber">Street Number</label>
												<input
													class="form-control"
													type="text"
													name="streetNumber"
												/>
											</div>
											<div class="my-3 col-6">
												<label for="postalCode">Postal Code</label>
												<input
													class="form-control"
													type="text"
													name="postalCode"
												/>
											</div>
											<div class="my-3 col-6">
												<label for="city">City</label>
												<input
													class="form-control"
													type="text"
													name="city"
												/>
											</div>
											<div class="my-3 col-6">
												<label for="state">State/Province</label>
												<input
													class="form-control"
													type="text"
													name="state"
												/>
											</div>
											<div class="my-3 col-6">
												<label for="country">Country</label>
												<input
													class="form-control"
													type="text"
													name="country"
												/>
											</div>
										</div>
									</div>
								</div>
								<div class="row">
									<div class="mb-3 col-12">
										<input
											class="btn btn-success"
											type="submit"
											value="Signup"
										/>
										<input
											id="login_button"
											class="btn btn-success"
											type="button"
											value="Login"
										/>
									</div>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</main>

		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
			crossorigin="anonymous"
		></script>
		<script>
			const login_button = document.getElementById('login_button');
			login_button.addEventListener('click', (e) => {
				window.location.replace('/auth/login');
			});
		</script>
	</body>
</html>
