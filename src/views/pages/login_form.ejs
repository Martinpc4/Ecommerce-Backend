<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Login Form</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
            crossorigin="anonymous"
        />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.0/font/bootstrap-icons.css">
    </head>
    <body>
        <style>
            #loginForm {
                max-width: 400px;
                max-height: 500px;
            }
            #fb_btn {
                background-color: #1877F2;
                width: 40px;
                height: 40px;
            }
            #fb-icon {
                color: white;
            }
            #gh_btn {
                background-color: #181717;
                width: 40px;
                height: 40px;
            }
            #gh-icon {
                color: white;
            }
        </style>
        <%- include('../partials/header'); -%>
        <main class="container d-flex flex-column justify-content-center align-items-center">
            <div id="loginForm" class="container m-5 w-50 px-5 mw-50">
                <div class="row">
                    <p class="fs-3 text-center">Server Login</p>
                </div>
                <div class="row">
                    <form action="/auth/login" method="post">
                        <div class="my-2">
                            <div class="my-3 col-12">
                                <label for="username">Username</label>
                                <input class="form-control" type="text" name="username" />
                            </div>
                            <div class="my-3 col-12">
                                <label for="password">Password</label>
                                <input class="form-control" type="password" name="password" />
                            </div>
                        </div>
                        <div class="mb col-12">
                            <input class="btn btn-success" type="submit" value="Login" />
                            <input
                                id="signup_button"
                                class="btn btn-success"
                                type="button"
                                value="Sign up"
                            />
                        </div>
                    </form>
                </div>
                <div class="row justify-content-center">
                    <div class="col-2 d-flex justify-content-center">
                        <form action="/auth/facebook" method="get">
                            <button id="fb_btn" type="submit" class="btn rounded-circle">
                                <i id="fb-icon" class="bi bi-facebook"></i>
                            </button>
                        </form>
                    </div>
                    <div class="col-2 d-flex justify-content-center">
                        <form action="/auth/github" method="get">
                            <button id="gh_btn" type="submit" class="btn rounded-circle">
                                <i id="gh-icon" class="bi bi-github"></i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </main>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"
        ></script>
        <script>
            const signup_button = document.getElementById('signup_button');
            signup_button.addEventListener('click', (e) => {
                window.location.replace('/auth/signup');
            });
        </script>
    </body>
</html>
